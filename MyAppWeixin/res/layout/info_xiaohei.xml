<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" >
           
        <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_vertical"  >
  			<Button
            	android:id="@+id/login_reback_btn"
            	android:layout_width="70dp"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:text="返回"
            	android:textSize="14sp"
            	android:textColor="#fff"
            	android:onClick="btn_back"
           		android:background="@drawable/title_btn_back"/>  
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="详细资料"
        		android:layout_centerInParent="true"
        		android:textSize="20sp"		
				android:textColor="#ffffff" /> 
 
			    
			<Button
            	android:id="@+id/login_save_btn"
            	android:layout_width="67dp"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true" 
            	android:layout_centerVertical="true"
            	android:layout_marginRight="5dp"
            	android:text="保存"
            	android:textSize="14sp"
            	android:textColor="#fff"
            	android:onClick="btn_back"
           		android:background="@drawable/title_btn_right"/>
			
		</RelativeLayout>
		
    <ScrollView
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:scrollbarStyle="outsideOverlay"  
    	
		>
			
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="0dp" >
			
            <ImageView
      		    	android:id="@+id/add_friend"
            		android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:layout_centerVertical="true"
        			android:layout_alignParentLeft="true"        			
        			android:layout_marginLeft="8dp"
        			android:padding="8dp"
        			android:src="@drawable/icon"
        			android:onClick="head_xiaohei" /> 
        			
            <TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentTop="true"
        			android:layout_alignParentLeft="true"
        			android:layout_marginLeft="95dp"
        			android:padding="15dp" 
        			android:text="我的广告屏"
        			android:textSize="18sp"		
					android:textColor="#000" />
            <TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_alignParentBottom="true"
        			android:layout_marginLeft="95dp"
        			android:padding="15dp" 
        			android:text="编号：01"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp" >
			
         	<RelativeLayout
         	    android:layout_width="fill_parent"
         	    android:layout_height="wrap_content"
         	    android:background="@drawable/preference_first_item"
         	    android:clickable="true"
         	    android:gravity="center_vertical" 
         	    android:focusable="true"   
		android:focusableInTouchMode="true"
         	    >

         	    <TextView
         	        android:id="@+id/textView1"
         	        android:layout_width="wrap_content"
         	        android:layout_height="wrap_content"
         	        android:layout_centerVertical="true"
         	        android:padding="8dp"
         	        android:text="地区"
         	        android:textColor="#333"
         	        android:textSize="17sp" />

         	    <EditText
         	        android:id="@+id/LED_Address"
         	        android:layout_width="wrap_content"
         	        android:layout_height="wrap_content"
         	        android:layout_alignParentRight="true"
         	        android:layout_alignParentTop="true"
         	        android:layout_alignParentBottom="true"
         	        android:layout_marginTop="4dp"
         	        android:layout_marginBottom="1dp"
         	        android:ems="10"
         	        android:hint="所在地址"
         	        
         	        />
         	    

         	</RelativeLayout>

   		  	<RelativeLayout
   		  	    android:layout_width="fill_parent"
   		  	    android:layout_height="wrap_content"
   		  	    android:background="@drawable/preference_item"
   		  	    android:clickable="true"
   		  	    android:focusable="true"
   		  	    android:focusableInTouchMode="true"
   		  	    android:gravity="center_vertical" >

            	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_centerVertical="true"
        			android:padding="8dp" 
        			android:text="备注"
        			android:textSize="17sp"		
					android:textColor="#333" /> 
         	    <EditText
         	        android:id="@+id/LED_remark"
         	        android:layout_width="wrap_content"
         	        android:layout_height="fill_parent"
         	        android:layout_alignParentRight="true"
         	        android:layout_marginTop="4dp"
         	        android:layout_marginBottom="1dp"
         	        android:ems="10"
         	        android:hint="添加备注"
         	        
         	        />		
      		</RelativeLayout>
      		<RelativeLayout
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:gravity="center_vertical"
            		android:clickable="true"
            		android:background="@drawable/preference_item" 
            		android:focusable="true"   
		android:focusableInTouchMode="true"
					>
            	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_centerVertical="true"
        			android:padding="8dp" 
        			android:text="号码"
        			android:textSize="17sp"		
					android:textColor="#333" /> 
				<EditText
         	        android:id="@+id/LED_SIM_number"
         	        android:layout_width="wrap_content"
         	        android:layout_height="wrap_content"
         	        android:layout_alignParentRight="true"
         	        android:layout_marginTop="4dp"
         	        android:layout_marginBottom="1dp"
         	        android:ems="10"
         	        android:hint="显示屏电话卡号码"
         	        android:inputType="phone"
         	        
         	        /> 			
      		</RelativeLayout>
      		<RelativeLayout
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:gravity="center_vertical"
            		android:clickable="true"
            		android:background="@drawable/preference_last_item" >
            	<TextView
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_centerVertical="true"
        			android:padding="8dp" 
        			android:text="图片"
        			android:textSize="17sp"		
					android:textColor="#333" /> 
				<ImageView
				    android:id="@+id/xh_head_img"
      		    	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:layout_centerVertical="true"
        			android:layout_alignParentLeft="true"
        			android:layout_marginLeft="80dp"
        			android:padding="8dp"
        			android:src="@drawable/icon" />  	
        			
        		<ImageView
            		android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:layout_centerVertical="true"
        			android:layout_alignParentRight="true"
        			android:clickable="true"
        			android:src="@drawable/mm_submenu" />	
      		</RelativeLayout>
      		
      	
        </LinearLayout>
        
        <Button            
            android:layout_width="300dp"
            android:layout_height="wrap_content"            
            android:background="@drawable/btn_style_green"            
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="发消息"
            android:textColor="#fff"
            android:textSize="18sp"
            android:onClick="btn_back_send"
             />
	</LinearLayout>
  </ScrollView>
</LinearLayout>